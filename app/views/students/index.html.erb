<div class="row center" >
  <div class="col s12">
    <h3>Students Directory</h3>
  </div>
</div>

 <div class="row">
  <% @students.each do |student| %>
      <div class="col s6 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Name: <%= student.first_name %> <%= student.last_name %></span>
               
             
            </div>
            <div class="card-action">
              
             
                <%= link_to "View Profile", student_path(student) %>
            </div>

          
        </div>

      </div>
    <% end %>
    <div class="container">
      <div class="row">
              <%= link_to "New_Student", new_student_path, class: "btn btn-outline-info" %>
            </div>
            </div>


    <div class="container">
      <div class="row">
            <% if (logged_in?) %>

            <%= link_to "logout", logout_path, method: :delete %>
            <% else %>
              <%= link_to "login", login_path, class: "btn btn-outline-info" %>
            <% end %>
            </div>
            </div>
            
 </div>
  