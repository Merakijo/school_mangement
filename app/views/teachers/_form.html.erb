<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
          <div class="row">
          <%= form_for(@teacher, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, placeholder: "Enter you first name", autofocus: true %>
            
                

              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
            <%= f.label :last_name %>  
            <%= f.text_field :last_name, placeholder: "Enter your last address" %>
            
              </div>
            </div>

            

             <div class="row">
              <div class="input-field col s12">
            <%= f.label :Department %>  
            <%= f.text_field :department, placeholder: "Enter your department" %>
            
              </div>
            </div>

            

            </div>
            
            <div class="row">
              <div class="input-field col s12">
                <%= f.submit "Sign Up"%>  
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
